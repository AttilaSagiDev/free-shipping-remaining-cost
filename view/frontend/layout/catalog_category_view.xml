<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="2columns-left"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content.top">
            <block name="shipping.remaining.cost.sidebar"
                   template="Space_FreeShippingRemainingCost::content/content-message.phtml"
                   ifconfig="free_shipping_remaining_cost_settings/base_config/enabled">
                <arguments>
                    <argument name="jsLayout" xsi:type="array">
                        <item name="components" xsi:type="array">
                            <item name="shippingRemainingCost" xsi:type="array">
                                <item name="component"
                                      xsi:type="string">Space_FreeShippingRemainingCost/js/view/shipping-remaining-cost</item>
                            </item>
                        </item>
                    </argument>
                    <argument name="view_model" xsi:type="object">
                        Space\FreeShippingRemainingCost\ViewModel\ContentMessage
                    </argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
